[flake8]
max-line-length = 120
exclude = 
    .git,
    __pycache__,
    build,
    dist,
    *.egg-info,
    .venv,
    venv

# Ignore common false positives
ignore = 
    # E501: line too long (handled by max-line-length)
    W503,  # line break before binary operator (conflicts with PEP 8)
    E203,  # whitespace before ':' (conflicts with black)
    E402,  # module level import not at top of file (acceptable for conditional imports)

# Per-file ignores for specific patterns
per-file-ignores =
    # Allow unused imports in __init__.py
    __init__.py: F401
    # Allow star imports in typing module
    epycon/core/_typing.py: F401,F403
